# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# Learn more: https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 100

# TypeScript, JavaScript, JSX, TSX
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_style = space
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_style = space
indent_size = 2
insert_final_newline = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# MDX files
[*.mdx]
trim_trailing_whitespace = false
max_line_length = off

# CSS, SCSS, PostCSS
[*.{css,scss,pcss}]
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = space
indent_size = 2

# Package.json - specific formatting
[package.json]
indent_style = space
indent_size = 2

# Configuration files
[{*.config.js,*.config.ts,*.config.mjs}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Python files (for markitdown-service)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# Requirements files
[requirements*.txt]
indent_style = space
indent_size = 2

# Docker files
[{Dockerfile,*.dockerfile}]
indent_style = space
indent_size = 2

# Docker Compose
[docker-compose*.{yml,yaml}]
indent_style = space
indent_size = 2

# Git files
[.gitignore]
indent_style = space
indent_size = 2

# Lock files - don't format
[{pnpm-lock.yaml,package-lock.json,yarn.lock}]
insert_final_newline = false
indent_size = unset
indent_style = unset

# Makefiles - must use tabs
[Makefile]
indent_style = tab
indent_size = 4
