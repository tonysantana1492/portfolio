generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum MemberRole {
  OWNER
  ADMIN
  EDITOR
  VIEWER
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt DateTime? 

  googleId  String    @unique // Google Auth ID
  email     String    @unique
  name      String
  picture   String?
  verified  Boolean   @default(false)
  
  // Relationship with profiles
  profiles  Profile[]

  @@map("users")
}

model Subdomain {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt DateTime?

  slug      String    @unique
  icon      String? 
  
  // Profile relationship
  profileId String    @db.ObjectId
  profile   Profile   @relation(fields: [profileId], references: [id])

  @@map("subdomains")
}

model Profile {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime? @updatedAt
  deletedAt     DateTime? 
  
  // User relationship
  userId        String   @db.ObjectId
  user          User     @relation(fields: [userId], references: [id])
  
  // Subdomain relationship
  subdomains    Subdomain[]
  
  // BASICS
  firstName     String
  lastName      String
  displayName   String
  username      String   
  gender        String
  pronouns      String
  bio           String
  flipSentences String[]
  twitterUsername String
  githubUserName  String
  address       String
  phoneNumber   String
  email         String
  website       String
  otherWebsites String[]
  jobTitle      String
  avatar        String
  ogImage       String
  keywords      String[]
  // METADATA (stored as JSON)
  metadata      Json
  // SECTIONS (stored as JSON)
  sections      Json
  
  @@map("profiles")
  // @@unique([userId, slug])
  @@index([userId])
}

