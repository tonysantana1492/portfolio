{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!node_modules", "!.next", "!dist", "!build"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "warn",
          "fix": "safe",
          "options": {
            "attributes": ["classList"],
            "functions": ["clsx", "tw", "tw.*"]
          }
        }
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ["react", "react/**", "react-dom", "react-dom/**"],

              ":BLANK_LINE:",

              ["next", "next/**"],

              ":BLANK_LINE:",

              [":PACKAGE:", "!@repo", "!@repo/**"],

              ":BLANK_LINE:",

              ["@repo/design-system", "@repo/design-system/**"],

              [
                "@repo/ui",
                "@repo/ui/**",
                "@repo/ui-table",
                "@repo/ui-table/**",
                "@repo/ui-richtext",
                "@repo/ui-richtext/**"
              ],

              ["@repo/i18n", "@repo/i18n/**"],

              ["@repo", "@repo/**"],

              ":BLANK_LINE:",

              ["~/", "~/**"],

              ":BLANK_LINE:",

              [":PATH:"]
            ]
          }
        }
      }
    }
  }
}
