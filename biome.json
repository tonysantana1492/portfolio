{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!**/components/ui",
      "!**/node_modules",
      "!**/.next",
      "!**/dist",
      "!**/build",
      "!**/.cache",
      "!**/coverage",
      "!**/.nyc_output",
      "!**/pnpm-lock.yaml",
      "!**/package-lock.json",
      "!**/yarn.lock",
      "!**/*.generated.*",
      "!**/*.d.ts",
      "!**/turbo",
      "!**/.git",
      "!**/chunks",
      "!**/static",
      "!**/.vercel",
      "!**/public/sw.js",
      "**/src"
    ]
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "formatter": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/.next",
      "!**/dist",
      "!**/build",
      "!**/.cache",
      "!**/coverage",
      "!**/.nyc_output",
      "!**/pnpm-lock.yaml",
      "!**/package-lock.json",
      "!**/yarn.lock",
      "!**/*.generated.*",
      "!**/*.d.ts",
      "!**/turbo",
      "!**/.git",
      "!**/chunks",
      "!**/static",
      "!**/.vercel",
      "!**/public/sw.js"
    ],
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "formatWithErrors": false
  },
  "linter": {
    "enabled": true,
    "includes": [
      "**",
      "!**/node_modules",
      "!**/.next",
      "!**/dist",
      "!**/build",
      "!**/.cache",
      "!**/.turbo",
      "!**/coverage",
      "!**/.nyc_output",
      "!**/pnpm-lock.yaml",
      "!**/package-lock.json",
      "!**/yarn.lock",
      "!**/*.generated.*",
      "!**/*.d.ts",
      "!**/turbo",
      "!**/.git",
      "!**/chunks",
      "!**/static",
      "!**/.vercel",
      "!**/public/sw.js"
    ],
    "rules": {
      "recommended": true,
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "noUnusedVariables": "warn"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "warn",
          "fix": "safe",
          "options": {
            "attributes": ["classList"],
            "functions": ["clsx", "tw", "tw.*"]
          }
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ["react", "react/**", "react-dom", "react-dom/**"],

              ":BLANK_LINE:",

              ["next", "next/**"],

              ":BLANK_LINE:",

              ["~/", "~/**"],

              ":BLANK_LINE:",

              [":PATH:"]
            ]
          }
        }
      }
    }
  }
}
